@model LoginModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-alert="close">X</button>
        @TempData["MensagemErro"]
    </div>
}

<body>
    <div class="vh-100 container-md justify-content-center align-items-center">
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="col-12 col-md-8 col-lg-6">
                    <div class="card bg-white">
                        <div class="card-body p-5">
                            <form asp-controller="Login" asp-action="Entrar" class="mb-3 mt-md-4" method="post">
                                <h2 class="fw-bold mb-2 text-uppercase ">Listagem de Contatos</h2>
                                <p class=" mb-5">Por favor entre com seu login e senha!</p>
                                <div class="mb-3">
                                    <label for="login" class="form-label ">Login</label>
                                    <input type="text" asp-for="Login" class="form-control" id="login" placeholder="nome@exemplo.com">
                                    @Html.ValidationMessageFor(x => x.Login)
                                </div>
                                <div class="mb-3">
                                    <label for="senha" class="form-label ">Senha</label>
                                    <input type="password" asp-for="Senha" class="form-control" id="senha" placeholder="*******">
                                    @Html.ValidationMessageFor(x => x.Senha)
                                </div>
                                <p class="small"><a class="text-primary" href="forget-password.html">Esqueceu a senha?</a></p>
                                <div class="d-grid">
                                    <button class="btn btn-outline-dark" type="submit">Entrar</button>
                                </div>
                            </form>
                            <div>
                                <p class="mb-0  text-center">
                                    Não possui uma conta? <a href="signup.html" class="text-primary fw-bold">Criar Conta</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

