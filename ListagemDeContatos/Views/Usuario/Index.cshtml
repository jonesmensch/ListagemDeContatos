@model List<UsuarioModel>

@{
    ViewData["Title"] = "Lista de Usuários";
}
<h1>@ViewData["Title"]</h1>

<a type="button" asp-controller="Usuario" asp-action="NovoUsuario" class="btn btn-primary">Criar Novo Usuário</a>

<br />

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-alert="close">X</button>
        @TempData["MensagemSucesso"]
    </div>
}
@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-alert="close">X</button>
        @TempData["MensagemErro"]
    </div>
}

<br />

<table class="table table-striped table-hover" id="table-usuarios">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nome</th>
            <th scope="col">Login</th>
            <th scope="col">Email</th>
            <th scope="col">Perfil</th>
            <th scope="col">Data de cadastro</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Nome</td>
                    <td>@item.Login</td>
                    <td>@item.Email</td>
                    <td>@(item.Perfil == ListagemDeContatos.Enums.PerfilEnum.Admin ? "Administrador" : "Padrão")</td>
                    <td>@item.DataCriacao</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Basic example">
                            <a type="button" asp-route-id="@item.Id" asp-controller="Usuario" asp-action="Editar" class="btn btn-primary">Editar</a>
                            <a type="button" asp-route-id="@item.Id" asp-controller="Usuario" asp-action="DeletarConfirmacao" class="btn btn-danger">Deletar</a>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>